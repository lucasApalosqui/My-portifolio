@page
@model Portifolio.Pages.IndexModel
@{
    Layout = "Shared/_Layout";
}

<!DOCTYPE html>
<html>
    <body>
    @Html.RenderPartialAsync("Shared/NavMenuPartial").AsyncState
        <header class="masthead">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-lg-7 py-5">
                        <h1 class="mb-4">Seja Bem Vindo! Você chegou ao meu Site!!</h1>
                        <h2 class="m-0">Me Chamo Lucas Apalosqui, sou um <strong>Desenvolvedor .NET</strong> e o intuito deste site é listar todos os projetos pessoais e coletivos ao qual participei, detalhando ferramentas, funcionabilidade, código, imagens e aprendizado adquirido no processo.  </h2>
                    </div>
                    <div class="col-lg-5">
                        <div class="py-5 px-4 masthead-cards">
                            <div class="d-flex">
                                <a href="#title-index" class="w-50 pr-3 pb-4">
                                    <div class="card border-0 border-bottom-red shadow-lg shadow-hover">
                                        <div class="card-body text-center">
                                            <div class="text-center">
                                                <i class="fa fa-terminal fa-4x my-2"></i>
                                            </div>
                                            Projetos
                                        </div>
                                    </div>
                                </a>
                                <a href="~/Contato" class="w-50 pl-3 pb-4">
                                    <div class="card border-0 border-bottom-blue shadow-lg shadow-hover">
                                        <div class="card-body text-center">
                                            <div class="text-center">
                                                <i class="fa fa-phone fa-4x my-2"></i>
                                            </div>
                                            Contato
                                        </div>
                                    </div>
                                </a>
                            </div>
                            <div class="d-flex">
                                <a href="#" class="w-50 pr-3">
                                    <div class="card border-0 border-bottom-yellow shadow-lg shadow-hover">
                                        <div class="card-body text-center">
                                            <div class="text-center">
                                                <i class="fa-4x fa fa-info my-2"></i>
                                            </div>
                                            Sobre Mim
                                        </div>
                                    </div>
                                </a>
                            <a href="https://docs.google.com/document/d/1QFhSUydw7JkvdjWWVpzKG73LSt4wtIQi3T7JxF6LJhk/edit?usp=sharing" target="_blank" class="w-50 pl-3">
                                    <div class="card border-0 border-bottom-green shadow-lg shadow-hover">
                                        <div class="card-body text-center">
                                            <div class="text-center">
                                                <i class="fa-4x fa fa-file-pdf-o my-2"></i>
                                            </div>
                                            Curriculo
                                        </div>
                                    </div>
                                </a>
                            </div>
                            <div class="shape"></div>
                        </div>
                    </div>
                </div>
            </div>
            <svg style="pointer-events: none" class="wave" width="100%" height="50px" preserveAspectRatio="none" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" viewBox="0 0 1920 75">
                <defs>
                    <style>
                        .a {
                            fill: none;
                        }

                        .b {
                            clip-path: url(#a);
                        }

                        .c,
                        .d {
                            fill: #f9f9fc;
                        }

                        .d {
                            opacity: 0.5;
                            isolation: isolate;
                        }
                    </style>
                    <clipPath id="a">
                        <rect class="a" width="1920" height="75"></rect>
                    </clipPath>
                </defs>
                <title>wave</title>
                <g class="b">
                    <path class="c" d="M1963,327H-105V65A2647.49,2647.49,0,0,1,431,19c217.7,3.5,239.6,30.8,470,36,297.3,6.7,367.5-36.2,642-28a2511.41,2511.41,0,0,1,420,48"></path>
                </g>
                <g class="b">
                    <path class="d" d="M-127,404H1963V44c-140.1-28-343.3-46.7-566,22-75.5,23.3-118.5,45.9-162,64-48.6,20.2-404.7,128-784,0C355.2,97.7,341.6,78.3,235,50,86.6,10.6-41.8,6.9-127,10"></path>
                </g>
                <g class="b">
                    <path class="d" d="M1979,462-155,446V106C251.8,20.2,576.6,15.9,805,30c167.4,10.3,322.3,32.9,680,56,207,13.4,378,20.3,494,24"></path>
                </g>
                <g class="b">
                    <path class="d" d="M1998,484H-243V100c445.8,26.8,794.2-4.1,1035-39,141-20.4,231.1-40.1,378-45,349.6-11.6,636.7,73.8,828,150"></path>
                </g>
            </svg>
       
        </header>
    <div class="container index-container">
		<h2 class="title-index" id="title-index">Projetos!</h2>
        @foreach (var project in Model.projectsL)
        {
			<article class="postcard dark blue card-index">
				<a class="postcard__img_link" href="~/@project.PageName">
					<img class="postcard__img" src="@project.Images.FirstOrDefault(x => x.Name.Contains("main")).Url" alt="Image Title" />
				</a>
				<div class="postcard__text">
					<h1 class="postcard__title blue"><a href="#">@project.Name</a></h1>
					<div class="postcard__subtitle small">
					</div>
					<div class="postcard__bar"></div>
					<div class="postcard__preview-txt">@project.Description</div>
					<ul class="postcard__tagbox">
						@foreach (var tools in project.Tools)
						{
							<li class="tag__item"><i class="fas mr-2"></i>@tools.Name</li>
						}
						
						<li class="tag__item play blue">

                            <a href="~/@project.PageName"><i class="fas mr-2 ver-mais"></i>Ver Mais!</a>
						</li>
					</ul>
				</div>
			</article>
        }
    </div>
		@Html.RenderPartialAsync("Shared/FooterPartial").AsyncState

    
    </body>
</html>

